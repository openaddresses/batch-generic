{
    "ts-node": {
        "esm": true
    },
    "allowJs": true,
    "compilerOptions": {
        "module": "es2022",
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "target": "es2022",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "index.ts",
        "routes/**/*",
        "lib/**/*"
    ]
}
